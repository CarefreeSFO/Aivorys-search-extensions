{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "version": "1.0.0",
  "description": "__MSG_extensionDescription__",
  "default_locale": "en",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png"
    },
    "default_title": "__MSG_extensionName__"
  },
  "options_page": "options/options.html",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "chrome_settings_overrides": {
    "search_provider": {
      "name": "Aivorys Search",
      "keyword": "ai",
      "search_url": "https://search.aivorysdev.com/search?q={searchTerms}",
      "favicon_url": "https://search.aivorysdev.com/favicon.ico",
      "suggest_url": "https://search.aivorysdev.com/autocompleter?q={searchTerms}",
      "encoding": "UTF-8",
      "is_default": true
    }
  },
  "content_scripts": [
    {
      "matches": ["https://search.aivorysdev.com/*"],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
