{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "version": "1.0.0",
  "description": "__MSG_extensionDescription__",
  "default_locale": "en",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "search-android@aivorys.com",
      "strict_min_version": "113.0"
    },
    "gecko_android": {
      "strict_min_version": "113.0"
    }
  },
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png"
    },
    "default_title": "__MSG_extensionName__"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "chrome_settings_overrides": {
    "search_provider": {
      "name": "Aivorys Search",
      "keyword": "ai",
      "search_url": "https://search.aivorysdev.com/search?q={searchTerms}",
      "favicon_url": "https://search.aivorysdev.com/favicon.ico",
      "suggest_url": "https://search.aivorysdev.com/autocompleter?q={searchTerms}",
      "encoding": "UTF-8",
      "is_default": true
    }
  },
  "content_scripts": [
    {
      "matches": ["https://search.aivorysdev.com/*"],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_end"
    }
  ]
}
